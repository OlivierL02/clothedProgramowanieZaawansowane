@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="d-flex justify-content-center align-items-center" style="height: 100vh; background: black;">
    <div class="card" style="width: 100%; max-width: 500px; background-color: black; padding: 30px; border-radius: 15px; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.7);">
        <h2 class="text-center" style="color: #00bfff; margin-bottom: 20px;">RESET YOUR PASSWORD</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />

            <div class="form-floating mb-4">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="background-color: #1e1e1e; color: #fff; border: 1px solid #333;" />
                <label asp-for="Input.Email" style="color: #bbb;">Email Address</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." style="background-color: #1e1e1e; color: #fff; border: 1px solid #333;" />
                <label asp-for="Input.Password" style="color: #bbb;">New Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." style="background-color: #1e1e1e; color: #fff; border: 1px solid #333;" />
                <label asp-for="Input.ConfirmPassword" style="color: #bbb;">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn w-100" style="background: linear-gradient(90deg, #00ffff, #00bfff); color: #fff; font-weight: bold; border: none; border-radius: 8px; padding: 15px; text-transform: uppercase; letter-spacing: 1px;">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}