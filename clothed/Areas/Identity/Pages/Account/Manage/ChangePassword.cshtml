@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change your password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row justify-content-center" style="color: white; font-family: 'Arial', sans-serif;">
    <div class="col-md-6" style="background-color: rgba(0, 0, 0, 0.8); padding: 20px; border-radius: 10px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.5);">
        <form id="change-password-form" method="post" style="display: flex; flex-direction: column; gap: 20px;">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.OldPassword" class="form-label" style="color: #00ffff;">Old Password</label>
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password."
                       style="background-color: rgba(255, 255, 255, 0.1); color: #ff69b4; border: 1px solid #00ffff; border-radius: 5px;" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.NewPassword" class="form-label" style="color: #ff69b4;">New Password</label>
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password."
                       style="background-color: rgba(255, 255, 255, 0.1); color: #00ffff; border: 1px solid #ff69b4; border-radius: 5px;" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label" style="color: #ff69b4;">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password."
                       style="background-color: rgba(255, 255, 255, 0.1); color: #00ffff; border: 1px solid #ff69b4; border-radius: 5px;" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg"
                    style="background-color: #ff69b4; color: white; border: none; padding: 10px; border-radius: 5px; font-weight: bold; cursor: pointer;">
                Update password
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
