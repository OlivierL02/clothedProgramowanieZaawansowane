@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div style="background-color: black; color: white; display: flex; flex-direction: column; align-items: center; justify-content: center; margin-top: 350px;">

    <div style="background-color: rgba(0, 0, 0, 0.8); padding: 20px; border-radius: 10px; width: 90%; max-width: 800px;">
        <div class="row" style="display: flex; flex-wrap: wrap;">
            <div class="col-md-3" style="flex: 1; max-width: 200px; margin-right: 20px;">
                <partial name="_ManageNav" />
            </div>
            <div class="col-md-9" style="flex: 3;">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}