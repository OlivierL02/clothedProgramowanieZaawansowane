@page
@model clothed.Pages.Account.MyOrdersModel

@{
    ViewData["Title"] = "My Orders";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #000;
        color: #ddd;
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .table-container {
        margin-top: 190px;
        background-color: #000;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background-color: #1e1e1e;
        border-radius: 8px;
        overflow: hidden;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
        }

        .table th {
            background-color: #333;
            color: #fff;
            font-weight: bold;
            font-size: 16px;
        }

        .table td {
            border-bottom: 1px solid #444;
            color: #bbb;
            font-size: 14px;
        }

            .table td a {
                color: #00d4cc;
                text-decoration: none;
                padding: 8px 16px;
                border-radius: 5px;
                background-color: #333;
                border: 1px solid #00d4cc;
                transition: all 0.3s ease;
            }

                .table td a:hover {
                    background-color: #00d4cc;
                    color: #121212;
                    border-color: #00b4a3;
                }

    .no-orders-message {
        text-align: center;
        font-size: 18px;
        color: #bbb;
        padding: 20px;
    }
</style>

<div class="table-container">

    @if (Model.Orders.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Order Number</th>
                    <th>Order Date</th>
                    <th>Total Price</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.OrderNumber</td>
                        <td>@order.CreatedAt.ToString("g")</td>
                        <td>@string.Format("{0:C}", order.Items.Sum(i => i.Product.Price * i.Quantity))</td>
                        <td>
                            <a href="/Carts/OrderDetails?orderId=@order.Id" class="btn btn-info">View Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="no-orders-message">No orders found.</p>
    }
</div>
