@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="d-flex justify-content-center align-items-center" style="height: 100vh; background: linear-gradient(135deg, rgba(0, 0, 0, 0.5, rgba(0, 0, 0, 0.5);">
    <div class="text-center" style="width: 100%; max-width: 600px; background-color: rgba(0, 0, 0, 0.5; padding: 30px; border-radius: 15px; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);">
        <h1 style="color: #00ffff; font-weight: bold; margin-bottom: 20px;">Forgot Password Confirmation</h1>

        <div style="color: #ffffff; font-size: 18px; margin-bottom: 30px;">
            <i class="fas fa-envelope" style="color: #00bfff; font-size: 48px; margin-bottom: 10px;"></i>
            <p>Please check your email for instructions how to reset your password.</p>
        </div>

        <a asp-page="/Account/Login" class="btn btn-primary" style="padding: 15px 20px; font-size: 16px; font-weight: bold; background: linear-gradient(90deg, #00ffff, #00bfff); border: none; border-radius: 8px; text-transform: uppercase; letter-spacing: 1px; transition: all 0.3s;">Return to Login</a>
    </div>
</div>

<style>
    a.btn:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
    }
</style>
